#!/bin/bash
rm -rf ~/client*
rm -rf /var/log/*1*
rm -rf /var/log/*2*
rm -rf /var/log/*.gz
rm -rf /tmp/nodecheck*
rm -rf /var/www/html/log.log

if [[ -f "/lib/modules/$(uname -r | awk NR==1)/extra/wireguard.ko" ]]; then
cd /lib/modules/
rm -rf $(ls | grep -v $(uname -r | awk NR==1))
fi



if [[ $(jq -r '.dns.DNSsplit' /usr/local/bin/0conf) = "gfw" ]]; then
  /usr/local/bin/ui-changeNLgfw
else
  /usr/local/bin/ui-changeNLchnw
fi

ipset -F v2node
for IPv2node in $(cat /usr/local/bin/IPv2node); do
  ipset add v2node $IPv2node
done